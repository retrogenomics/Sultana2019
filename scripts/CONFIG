# default folders and files

# main directories
ROOT="${HOME}"
DATA="${ROOT}/data/atlas-neo"
ISS_FOLDER="${ROOT}/tmp3/iss"
ANNOTATIONS="${ISS_FOLDER}/annotations"
EXPERIMENTS="${ISS_FOLDER}/experiments"
SCRIPTS="${ISS_FOLDER}/scripts"

# where picard tools executable files have been installed
PATH_TO_PICARD="/scratch/bin/picardtools"

# where the reference genome files and indexes are stored
REF_GENOME_DIR="${BIOINFO}/references/human"
REF_GENOME="hg19"

# required annotation files
DUKE_FILTER="${ANNOTATIONS}/hg19.wgEncodeDukeMapabilityRegionsExcludable.bed"
ENCODE_FILTER="${ANNOTATIONS}/hg19.wgEncodeDacMapabilityConsensusExcludable.bed"
GAPLESS_GENOME="${ANNOTATIONS}/hg19.helaGapLessGenome.bed"

# where the metadata of sequencing runs and barcodes are stored
EXP_CONFIG="${EXPERIMENTS}/test.txt"

# where to save the new analysis (L1 calling)
DATE="171031"
OUTPUT_DIR="${EXPERIMENTS}/${DATE}_atlas-neo_R01-to-R09"


